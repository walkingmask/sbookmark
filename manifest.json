{
  "manifest_version": 2,
  "name": "Slash Bookmarks",
  "short_name": "/Bookmarks",
  "description": "Handle Bookmarks Like UNIX Path.",
  "version": "1.0.0",
  "permissions": [
    "<all_urls>",
    "bookmarks",
    "storage"
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/icons/icon19.png",
      "38": "images/icons/icon38.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/icons/icon16.png",
    "48": "images/icons/icon48.png",
    "128": "images/icons/icon128.png"
  },
  "omnibox": {
    "keyword": "/"
  },
  "options_page": "options.html",
   "background": {
      "persistent" : false,
      "scripts"    : [
         "js/background.js"
      ]
   }
}